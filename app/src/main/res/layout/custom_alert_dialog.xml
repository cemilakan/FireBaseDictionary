<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bggradient_standart"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Rusça"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editTextTurkce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bginput"
            android:ems="10"
            android:hint="Türkçe"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#868484"
            android:textColorHint="#D7FFFFFF"
            android:textColorLink="#007C7878"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="76dp" />

        <EditText
            android:id="@+id/editTextRusca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bginput"
            android:ems="10"
            android:hint="Rusça"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#868484"
            android:textColorHint="#D7FFFFFF"
            android:textColorLink="#007C7878"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="141dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="37dp"
                android:background="@drawable/bginput"
                android:hint="Ekle"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#868484"
                android:textColorHint="#FFFFFF"
                android:textColorLink="#007C7878"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="205dp" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bginput"
                android:hint="İptal"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#868484"
                android:textColorHint="#FFFFFF"
                android:textColorLink="#007C7878"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="223dp"
                tools:layout_editor_absoluteY="205dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>