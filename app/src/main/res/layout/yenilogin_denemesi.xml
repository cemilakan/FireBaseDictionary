<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mardinbg2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bgoverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="321dp"
        android:layout_height="197dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="136dp"
        android:text="KENDİNİ GELİŞTİRMENİN EN KISA YOLU"
        android:textColor="#FFF"
        android:textSize="42sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="8dp"
        android:text="Her günün bir kısmını kendini geliştirmek için harca."
        android:textColor="#FFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/signUpText"
        app:layout_constraintTop_toBottomOf="@+id/signUpText" />


    <LinearLayout
        android:id="@+id/beforeLoginAnyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <Button
            android:id="@+id/btnKayitOl"
            android:layout_width="168dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bgbtn"
            android:drawableStart="@drawable/fui_ic_mail_white_24dp"
            android:paddingLeft="20dp"
            android:text="Kayıt Ol"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <Button

            android:id="@+id/btnSignGoogle"
            android:layout_width="168dp"
            android:layout_height="40dp"
            android:background="@drawable/radiusbtn"
            android:drawableStart="@drawable/fui_ic_googleg_color_24dp"
            android:paddingLeft="20dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/afterLoginAnyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/beforeLoginAnyUser"
        app:layout_constraintTop_toTopOf="@+id/beforeLoginAnyUser"
        tools:visibility="invisible">

        <Button

            android:id="@+id/calisBtn"
            android:layout_width="168dp"
            android:layout_height="40dp"
            android:background="@drawable/radiusbtn"
            android:drawableStart="@drawable/ic_calis_"
            android:paddingLeft="20dp"
            android:text="Devam Et"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />


        <Button
            android:id="@+id/signOutButton"
            android:layout_width="168dp"
            android:layout_height="40dp"
            android:background="@drawable/bgbtn"
            android:drawableStart="@drawable/ic_exit_24dp"
            android:paddingLeft="20dp"
            android:text="Çıkış Yap"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18sp" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>